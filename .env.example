# ===========================================
# WoW Public Server - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values

# -----------------
# Supabase (Auth & Database)
# -----------------
# Get these from your Supabase project settings -> API
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Service key for server-side operations (keep secret!)
# Found in Supabase project settings -> API -> service_role key
SUPABASE_SERVICE_KEY=your-service-key-here

# -----------------
# Database
# -----------------
# Supabase PostgreSQL connection string
# Found in Supabase project settings -> Database -> Connection string
# Use the "Transaction pooler" URL for serverless environments
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres

# -----------------
# Admin Panel Integration
# -----------------
# URL for the admin panel API (local only, for server status and SOAP proxy)
ADMIN_PANEL_URL=http://localhost:3000

# Shared secret key for authenticating requests to the admin panel
# Generate a secure random string (e.g., openssl rand -hex 32)
# IMPORTANT: This same key must be configured in the admin panel
PUBLIC_SITE_SERVICE_KEY=your-secure-service-key-here

# -----------------
# Site Configuration
# -----------------
# Public URL of this site (used for email verification links, etc.)
VITE_SITE_URL=http://localhost:3001

# -----------------
# Development
# -----------------
# Port for the dev server (default: 3001)
PORT=3001
